.content{
	text-align: center;
}

.userinfo{
	margin-top: 100rpx;
	margin-bottom: 100rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.userinfo .userinfo-avatar{
	width:150rpx;
	height:150rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.input-area{
	border-top: 1rpx solid #ddd;
	background-color: #fff;
	text-align: left;
}

.input-area .input-log{
	display: flex;
	flex-direction: row;
	border-bottom: 1rpx solid #ddd;
}

.userinfo-logIcon{
	width:60rpx;
	height:60rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.input-area input {
  height: 100rpx;
  line-height: 100rpx;
}

.button-area{
	width:80%;
	margin: 0 auto;
}

.button-area button {
  margin-top: 40rpx;
  color: #fff;
}

.txt-area{
	margin-top: 30rpx;
	display: flex;
	justify-content: space-between;
  	font-size: 30rpx;
}

.forgot-password{
	color:#888;
}

.register {
  color: #f90;
}

.forgot-password:active, .register:active {
  opacity: 0.7;
}


